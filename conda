# research
conda create -n research python=3.11
source activate research
## r
conda install conda-forge::r-base conda-forge::r-tidyverse conda-forge::r-sf conda-forge::r-spdep conda-forge::r-fields conda-forge::r-languageserver conda-forge::r-tidybayes conda-forge::r-rstan conda-forge::r-devtools conda-forge::r-mice conda-forge::sqlite conda-forge::r-bayeslogit
## python
# don't use pip to install pyright
conda install conda-forge::pyright
pip install numpy scipy pandas matplotlib seaborn scikit-learn jupytext ipython tqdm
